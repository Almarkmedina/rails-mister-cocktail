<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> <%= @cocktail.ingredients[0].name %>
      <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} %>
      </li>

  <% end %>
</ul>
<p><%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %></p>

<p><%= link_to "Back to main page", cocktails_path %></p>

