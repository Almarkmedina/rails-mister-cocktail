<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'show_banner.png' %>')">

  <h1><%= @cocktail.name %></h1>
  <h2>Ingredients</h2>
  <div class="card-ingredients">
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> <%= @cocktail.ingredients[0].name %>
          <%= link_to "Delete ingredient", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} %>
          </li>
      <% end %>
    </ul>
    <br>
    <br>
     <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-ghost" %>
    <br>
    <br>
      <%= link_to "Back to main page", cocktails_path, class: "btn btn-ghost" %>
    </div>
  </div>
</div>





