<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'show_banner.png' %>')">
  <h1><%= @cocktail.name %></h1>
  <h2>Ingredients</h2>
  <div class="card-ingredients">
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> <%= @cocktail.ingredients[0].name %>
          <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} %>
          </li>

      <% end %>
    </ul>
  </div>
</div>

<div class="button_dose">
  <p><%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %></p>
</div>
<p><%= link_to "Back to main page", cocktails_path %></p>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>


