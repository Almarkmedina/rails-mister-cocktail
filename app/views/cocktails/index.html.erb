<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'cocktails.png' %>')">
  <h1>Cocktails</h1>
  <p><%= link_to "Add your cocktail", new_cocktail_path %></p>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <%= cl_image_tag("svniie2uim8ywgyk25pj",
      width: 400, height: 300, crop: :fill) %>
          <div class="card-description">
           <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
